<div class="row g-4 reveal reveal-delay-1">
    <aside class="col-lg-3 reveal reveal-delay-1">
        <div class="soft-panel p-3 sticky-top" style="top: 90px;">
            <h2 class="h6 section-title section-head"><span class="icon-badge">ðŸªœ</span>Ã‰tapes</h2>
            <div class="list-group">
                {{#etapes}}
                <button type="button" class="list-group-item list-group-item-action" onclick="scrollToEtape('etape-{{id}}')">
                    <strong>{{name}}</strong><br>
                    <small class="text-muted">{{moduleCount}} modules</small>
                </button>
                {{/etapes}}
            </div>
        </div>
    </aside>

    <section class="col-lg-9 reveal reveal-delay-2">
        {{#etapes}}
        <section id="etape-{{id}}" class="mb-5 reveal reveal-delay-3">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h2 class="section-title h4 mb-1 section-head"><span class="icon-badge">âš“</span>{{name}}</h2>
                    <p class="text-muted mb-0">{{description}}</p>
                </div>
                <span class="badge text-bg-light">{{moduleCount}} modules</span>
            </div>

            <div class="row g-4">
                {{#modules}}
                <div class="col-xl-6">
                    <article class="card h-100" id="module-{{id}}">
                        <header class="card-header bg-light-subtle">
                            <h3 class="h5 mb-0">Module {{moduleNumber}} - {{name}}</h3>
                        </header>
                        <div class="card-body">
                            <p class="text-muted">{{description}}</p>

                            <ul class="nav nav-tabs mt-3" role="tablist">
                                <li class="nav-item">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#module-{{id}}-cours" type="button">Cours</button>
                                </li>
                                <li class="nav-item">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#module-{{id}}-exercices" type="button">Exercices</button>
                                </li>
                                <li class="nav-item">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#module-{{id}}-examen" type="button">Mini-examen</button>
                                </li>
                            </ul>

                            <div class="tab-content mt-3">
                                <div id="module-{{id}}-cours" class="tab-pane fade show active">
                                    <h4 class="h6">Objectifs</h4>
                                    <ul class="mb-3">
                                        {{#objectifs}}
                                        <li>{{.}}</li>
                                        {{/objectifs}}
                                    </ul>
                                    <h4 class="h6">Contenu</h4>
                                    {{{content}}}
                                </div>
                                <div id="module-{{id}}-exercices" class="tab-pane fade">
                                    <div id="exercices-{{id}}" class="exercices-container"></div>
                                </div>
                                <div id="module-{{id}}-examen" class="tab-pane fade">
                                    <div id="mini-qcm-{{id}}" class="mini-qcm-container"></div>
                                </div>
                            </div>
                        </div>
                        <footer class="card-footer bg-transparent">
                            <div class="progress mb-2" role="progressbar">
                                <div class="progress-bar" style="width: {{progress}}%"></div>
                            </div>
                            <small class="text-muted">Progression {{progress}}% â€¢ Score {{score}}/100</small>
                        </footer>
                    </article>
                </div>
                {{/modules}}
            </div>
        </section>
        {{/etapes}}
    </section>
</div>

<script>
function scrollToEtape(id) {
    document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
}
</script>
